<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- 顶部标题栏+返回按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">
        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:clickable="true"/>
        <!-- 页面标题 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/dark_black"
            android:text="Update Detail information"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu_b"
            android:gravity="center"/>
    </LinearLayout>

    <!-- 基础信息标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_m"
        android:text="Basic information"
        android:textColor="#2196F3"
        android:textSize="16sp"
        android:layout_marginTop="24dp"/>

    <!-- Title行：左侧文字 + 右侧输入框（默认提示book） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="0dp"
            android:fontFamily="@font/ubuntu_m"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Title"
            android:textColor="@color/dark_black"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:textColor="@color/dark_black"
            android:background="@drawable/rounded_edit_bg"
            android:paddingHorizontal="15dp"/>
    </LinearLayout>


    <!-- Appearance行：左侧文字 + 右侧输入框（默认提示70% new） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_m"
            android:layout_weight="1"
            android:text="Appearance"
            android:textColor="@color/dark_black"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/et_appearance"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/dark_black"
            android:layout_weight="2"
            android:fontFamily="@font/ubuntu_m"
            android:background="@drawable/rounded_edit_bg"
            android:paddingHorizontal="15dp"/>
    </LinearLayout>

    <!-- Price行：左侧文字 + 右侧输入框（默认提示30，仅允许输入数字） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="0dp"
            android:fontFamily="@font/ubuntu_m"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/dark_black"
            android:text="Price"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/et_price"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/ubuntu_m"
            android:layout_weight="2"
            android:textColor="@color/dark_black"
            android:inputType="number"
            android:background="@drawable/rounded_edit_bg"
            android:paddingHorizontal="15dp"/>
    </LinearLayout>

    <!-- 图片区域标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adding pictures"
        android:textColor="#2196F3"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu_m"
        android:layout_marginTop="30dp"/>

    <!-- 图片选择区域：已选图片 + 添加图片按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <!-- 添加图片按钮 -->
        <ImageView
            android:id="@+id/iv_add_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_add_pic"
            android:scaleType="center"
            android:background="@drawable/rounded_edit_bg"
            android:clickable="true"/>
    </LinearLayout>


    <!-- 描述区域标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items describe"
        android:textColor="#2196F3"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu_m"
        android:layout_marginTop="30dp"/>

    <!-- 描述输入框（多行输入） -->
    <EditText
        android:id="@+id/et_desc"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="top"
        android:background="@drawable/rounded_edit_bg"
        android:fontFamily="@font/ubuntu_m"
        android:padding="12dp"
        android:textColor="@color/dark_black"
        android:layout_marginTop="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- 提交按钮 -->
    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Submit"
        android:layout_marginHorizontal="40dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_m"
        android:textSize="17sp"
        android:background="@drawable/btn_grey_rounded"
        android:layout_marginBottom="42dp"/>

</LinearLayout>