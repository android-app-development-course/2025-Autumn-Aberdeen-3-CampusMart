<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="0dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/ubuntu_b"
        android:text="Add a good"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:elevation="20pt"/>

    <!-- 右侧角色插画 -->
    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_character"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"/>

    <!-- 底部按钮组 -->
    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:id="@+id/btn_sell"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="Sell!"
        android:fontFamily="@font/ubuntu_b"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:background="@drawable/btn_blue_rounded"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="35dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:paddingLeft="6dp"
        android:id="@+id/btn_gift"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/ubuntu_b"
        android:text="Life Service"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:background="@drawable/btn_red_rounded"
        android:layout_above="@id/btn_sell"
        android:layout_marginBottom="26dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="8dp"/>

</RelativeLayout>