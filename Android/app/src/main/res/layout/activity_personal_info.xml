<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- 顶部返回栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_back"
            android:layout_marginRight="5dp"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/ubuntu_m"
            android:layout_height="wrap_content"
            android:text="back"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- 标题：Personal information -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal information"
        android:fontFamily="@font/ubuntu_m"
        android:textColor="#2196F3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <!-- 头像区域 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/avatar_marry"
            android:background="@drawable/shape_circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click to change"
            android:fontFamily="@font/ubuntu_m"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- 昵称项：左侧文字 + 右侧输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_m"
            android:text="Nickname"
            android:textSize="14sp"/>
        <!-- 替换为EditText，默认值Marry -->
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/dark_black"
            android:layout_weight="2"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_m"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:paddingHorizontal="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginHorizontal="8dp"/>

    <!-- 个性签名词项：左侧文字 + 右侧输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="16dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_m"
            android:text="profile signature"
            android:textSize="14sp"/>
        <!-- 替换为EditText，默认值Nice to meet you -->
        <EditText
            android:id="@+id/et_signature"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/dark_black"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_m"
            android:textSize="14sp"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:paddingHorizontal="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginHorizontal="8dp"/>

    <!-- 手机号项：左侧文字 + 右侧输入框（仅允许输入数字） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_m"
            android:text="phone number"
            android:textSize="14sp"/>
        <!-- 替换为EditText，默认值178-6666-8888，限制输入数字 -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:inputType="phone"
            android:textColor="@color/dark_black"
            android:fontFamily="@font/ubuntu_m"
            android:paddingHorizontal="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginHorizontal="8dp"/>

    <!-- 邮箱项：左侧文字 + 右侧输入框（邮箱输入类型） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="email"
            android:fontFamily="@font/ubuntu_m"
            android:textSize="14sp"/>
        <!-- 替换为EditText，默认值123456@qq.com，邮箱输入类型 -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textColor="@color/dark_black"
            android:fontFamily="@font/ubuntu_m"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="8dp"/>
        </LinearLayout>
    <!-- 保存按钮 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Save"
        android:layout_marginHorizontal="60dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_m"
        android:background="@drawable/btn_grey_rounded"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="32dp"/>

</LinearLayout>