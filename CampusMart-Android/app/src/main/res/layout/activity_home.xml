<!-- 主布局（activity_home.xml） -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. Fragment容器（占满屏幕除导航栏外的区域） -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_nav"/>

    <!-- 2. 底部导航栏 -->
    <RelativeLayout
        android:id="@+id/layout_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 首页 -->
        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:orientation="vertical"
            android:layout_marginBottom="6dp"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:id="@+id/iv_home"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="home"
                android:fontFamily="@font/ubuntu_m"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 通知 -->
        <LinearLayout
            android:id="@+id/layout_notification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/layout_home"
            android:layout_marginStart="24dp"
            android:orientation="vertical"
            android:layout_marginBottom="6dp"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/iv_notification"
                android:src="@drawable/ic_notification"/>
            <TextView
                android:fontFamily="@font/ubuntu_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notification"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="28dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:id="@+id/iv_user"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:fontFamily="@font/ubuntu_m"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 消息 -->
        <LinearLayout
            android:id="@+id/layout_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="32dp"
            android:layout_toStartOf="@id/layout_user"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/iv_message"
                android:src="@drawable/ic_message"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="message"
                android:textSize="12sp"
                android:fontFamily="@font/ubuntu_m"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 用户 -->

    </RelativeLayout>

    <!-- 3. 添加按钮（强制放在最顶层） -->
    <!-- 添加按钮 -->
    <LinearLayout
        android:id="@+id/layout_add"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_nav"

        android:layout_marginBottom="-42dp"

        android:elevation="30dp"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/btn_circle_black"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>